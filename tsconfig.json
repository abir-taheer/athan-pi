{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "dist/",
    "sourceMap": true,
    "target": "ES5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": false
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "ts-node": {
    "files": true
  }
}
